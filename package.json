{
  "name": "base-repo",
  "version": "2.0.0",
  "description": "Opinionated boilerplate for front-end projects",
  "license": "MIT",
  "author": {
    "name": "Chris Watson",
    "email": "cwonrails@gmail.com",
    "url": "https://chriswatson.io"
  },
  "private": "true",
  "repository": {
    "type": "git",
    "url": "https://github.com/cwonrails/base-repo"
  },
  "scripts": {
    "deps": "david u",
    "lint:css": "stylelint src/css/*.css",
    "lint:js": "eslint src/js/*.js",
    "security": "nsp check",
    "serve": "browser-sync start --server --no-notify files 'dist/css/*.css, dist/js/*.js, dist/*.html",
    "test": "ava",
    "transpile": "./node_modules/.bin/babel src/js -d dist/js"
  },
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "6.3.6",
    "ava": "0.14.0",
    "babel-cli": "6.7.7",
    "babel-core": "6.7.7",
    "babel-eslint": "6.0.3",
    "babel-preset-es2015": "6.6.0",
    "browser-sync": "2.12.4",
    "david": "7.0.1",
    "eslint": "2.8.0",
    "nsp": "2.3.1",
    "postcss-cli": "2.5.2",
    "stylelint": "6.1.1",
    "stylelint-config-standard": "6.0.0"
  },
  "engines": {
    "node": ">=4.3.2 <5 || >=5.7.1 <6",
    "npm": ">=2.15.1 <3 || >=3.8.3 <4"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "eslint:recommended"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
