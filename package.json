{
  "name": "base-repo",
  "version": "6.0.0",
  "description": "Opinionated boilerplate for front-end projects",
  "license": "MIT",
  "author": {
    "name": "Chris Watson",
    "email": "cwonrails@gmail.com",
    "url": "https://chriswatson.io"
  },
  "private": "true",
  "repository": {
    "type": "git",
    "url": "https://github.com/cwonrails/base-repo"
  },
  "engines": {
    "node": ">=4.3.2 <5 || >=5.7.1",
    "npm": ">=2.15.1 <3 || >=3.8.3 <4"
  },
  "scripts": {
    "babel": "babel src/js --out-file dist/js/index.js",
    "browser-sync": "browser-sync start -c browsersync-config.js",
    "browser-sync:dist": "browser-sync start -c browsersync-config.js --files dist/* --server dist",
    "build": "npm run build:css && npm run build:html && npm run build:js && npm run build:vendor",
    "build:css": "postcss -c postcss-config.json",
    "build:html": "html-minifier -c html-minifier-config.json -o dist/index.html src/index.html",
    "build:js": "npm run babel && npm run uglify",
    "build:vendor": "npm run vendor",
    "copy": "cp src/!{index.html,css,img,js,vendor} dist/",
    "deps": "david u",
    "lint": "npm run lint:css && npm run lint:html && npm run lint:js",
    "lint:css": "stylelint src/css/*.css",
    "lint:html": "htmlhint src/*.html",
    "lint:js": "eslint src/js/*.js",
    "uglify": "uglifyjs -c -m -o dist/js/index.js dist/js/index.js",
    "vendor": "npm run vendor:css && npm run vendor:js && cp -R src/vendor dist/",
    "vendor:css": "cp node_modules/normalize.css/normalize.css src/vendor/css",
    "vendor:js": "cp node_modules/flexibility/dist/flexibility.js src/vendor/js"
  },
  "dependencies": {
    "normalize.css": "^4.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-preset-es2015": "^6.13.2",
    "browser-sync": "^2.14.0",
    "cssnano": "^3.7.4",
    "html-minifier": "^3.0.2",
    "htmlhint": "^0.9.13",
    "postcss": "^5.1.2",
    "postcss-cli": "^2.5.2",
    "postcss-easy-import": "^1.0.1",
    "stylelint": "^7.1.0",
    "stylelint-config-standard": "^12.0.0",
    "uglify-js": "^2.7.3"
  }
}
